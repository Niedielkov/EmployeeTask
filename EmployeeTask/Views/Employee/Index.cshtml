@model IEnumerable<EmployeeTask.Models.Employee>

@{
    ViewData["PageTitle"] = "Employees";
    ViewData["PageActionText"] = "+ New Employee";
    ViewData["PageActionUrl"] = "/Employee/AddOrEdit";
}

<div class="row">
    <div class="col-md-12">
        <ejs-grid id="employees" dataSource="@Model" gridLines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="12"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Employee" field="FullName" textAlign="Center"></e-grid-column>
                <e-grid-column headerText="Email" field="Email" textAlign="Center"></e-grid-column>
                <e-grid-column headerText="Phone" field="PhoneNumber" textAlign="Center"></e-grid-column>
                <e-grid-column headerText="Birth" field="DateOfBirth" type="Date" format="MMM-dd-yyyy" textAlign="Center"></e-grid-column>
                <e-grid-column headerText="Salary" field="FormatedSalary" textAlign="Center"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="150px" textAlign="Center"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>

<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/Employee/AddOrEdit/${EmployeeId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="/Employee/Delete/${EmployeeId}" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration" onclick="return confirm(&quot;Are you sure to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>
</script>